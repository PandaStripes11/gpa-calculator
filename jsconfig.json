{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@assets/*": ["src/assets/*"],
        "@sass/*": ["src/sass/*"],
        "@components/*": ["src/components/*"],
        "@services/*": ["src/services/*"],
        "@store/*": ["src/store/*"],
        "@utils/*": ["src/utils/*"],
        "@views/*": ["src/views/*"],
        "@src/*": ["src/*"]
      }
    },
    "exclude": ["node_modules", "config", "scripts"]
  }